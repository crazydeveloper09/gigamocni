<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 6%">
            <div id="form1">
                <a href="/surveys">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do strony o ankietach
                </a>
                <h1 class="login">Edytuj ankietę <q><%= survey.name %></q></h1>
                <% if(error.length > 0){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                <% } %>
                <form action="/surveys/<%= survey._id %>?_method=PUT" method="post">
                   
                    <label for="username" class="username">
                        Edytuj tytuł ankiety
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-pencil-alt"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" name="survey[name]" value="<%= survey.name %>" id="title" placeholder="Co oglądamy następnym razem?" aria-label="Tytuł ankiety" aria-describedby="basic-addon1" required>
                    </div>
                    
                    <label for="zoomSelect" class="username">
                        Edytuj typ ankiety
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="fas fa-hashtag"></i>
                            </span>
                        </div>
                        <select name="survey[type]" id="zoomSelect" class="form-control" required>
                            <option><%= survey.type %></option>
                            <option value="checkbox">Wybór opcji</option>
                            <option value="input">Wpisz odpowiedź</option>
                           
                        </select>
                    </div> 
                    <label for="zoomSelect" class="username">
                        Edytuj dla kogo jest ankieta
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="fas fa-user-circle"></i>
                            </span>
                        </div>
                        <select name="survey[for]" id="zoomSelect" class="form-control" required>
                            
                            <option><%= survey.for %></option>
                            <option value="admin">Administratorzy</option>
                            <option value="members">Członkowie grupy</option>
                           
                        </select>
                    </div>  
                    
                    <label for="description" class="username">
                        Edytuj opis ankiety
                        
                    </label>
                    <textarea required name="survey[description]" placeholder="Opis ankiety" id="description" class="form-control"><%= survey.description %></textarea>
                   <br>
                    
                    <input type="submit" value="Edytuj ankietę" class="btn btn-primary button btn-golden">
                   
                </form>
               
            </div>
           
        </div>
        
    </div>
</div>

</body>
</html>