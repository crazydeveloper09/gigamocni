<%- include("./partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 22%">
            <div id="form1">
                <a href="/login">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do strony logowania
                </a>
                <h1 class="login">Nie pamiętam hasła GigaMocni</h1>
                <% if(error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>
                <% if(success.length > 0){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
                <% } %>
                <form action="/members/forgot" method="post">
                    <p class="username">Podaj adres email</p>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i
                                    class="fas fa-envelope"></i></span>
                        </div>
                        <input type="text" class="form-control" autocomplete="on" name="email" id="username"
                            placeholder="Adres email" aria-label="Adres email" aria-describedby="basic-addon1">
                    </div>


                    <input type="submit" value="Poproś o zmianę hasła" class="btn btn-primary button btn-golden">
                </form>
            </div>
        </div>


    </div>
</div>


</body>

</html>