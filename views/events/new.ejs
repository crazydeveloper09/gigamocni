<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 6%">
            <div id="form1">
                <a href="/events">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do terminarza
                </a>
                <h1 class="login">Dodaj wydarzenie do terminarza</h1>
                <% if(error.length > 0){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                <% } %>
                <form action="/events" method="post">
                   
                    <label for="eventName" class="username">
                        Podaj nazwę wydarzenia
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-pencil-alt"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" name="name" id="eventName" placeholder="Zoomiczek" aria-label="Nazwa wydarzenia" aria-describedby="basic-addon1" required>
                    </div>
                    <label for="name" class="username">
                        Wybierz typ wydarzenia
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-hashtag"></i>
                            </span>
                        </div>
                        <select name="type" id="roleSelect" class="form-control" required>
                            <option>Spotkanie</option>
                            <option>GigaKino</option>
                            <option>Inne</option>
                        </select>
                    </div>
                    <label for="email" class="username">
                        Podaj datę wydarzenia
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-calendar"></i>
                            </span>
                        </div>
                        <input type="date" class="form-control" name="date" id="email" aria-label="Data wydarzenia" aria-describedby="basic-addon1" required>
                    </div>  
                    <label for="city" class="username" id="cityLabel">
                        Podaj czas wydarzenia
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-clock"></i>
                            </span>
                        </div>
                        <input type="time" class="form-control" name="time" id="city" aria-label="Czas wydarzenia" aria-describedby="basic-addon1" required>
                    </div>
                    
                    <label for="roleSelect" class="username">
                        Wybierz zooma
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="fas fa-camera"></i>
                            </span>
                        </div>
                        <select name="zoom" id="roleSelect" class="form-control" required>
                            <% zooms.forEach((zoom) => { %>
                                <option value="<%= zoom._id %>"><%= zoom.title %></option>
                            <% }) %>
                        </select>
                    </div>  
                    <label for="description" class="username">
                        Wpisz opis wydarzenia
                        
                    </label>
                    <textarea required name="description" placeholder="Opis wydarzenia" id="description" class="form-control"></textarea>
                   <br>
                    <input type="submit" value="Dodaj wydarzenie" class="btn btn-primary button btn-golden">
                   
                </form>
               
            </div>
           
        </div>
        
    </div>
</div>

</body>
</html>