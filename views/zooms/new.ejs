<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 6%">
            <div id="form1">
                <a href="/zoom">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do strony o zoomach
                </a>
                <h1 class="login">Dodaj zoom</h1>
                <% if(error.length > 0){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                <% } %>
                <form action="/zoom" method="post">
                   
                    <label for="username" class="username">
                        Podaj tytuł zooma
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-pencil-alt"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Spotkanie GigaMocnych" aria-label="Tytuł zooma" aria-describedby="basic-addon1" required>
                    </div>
                    <label for="name" class="username">
                        Podaj link do zooma
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-link"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" name="link" id="link" placeholder="Link do zooma" aria-label="Link" aria-describedby="basic-addon1" required>
                    </div>
                    <label for="email" class="username">
                        Podaj meeting ID
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-hashtag"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" name="meetingID" id="meetingID" placeholder="678 890 8907" aria-label="Numer do zooma" aria-describedby="basic-addon1" required>
                    </div>  
                    <label for="city" class="username" id="cityLabel">
                        Podaj hasło do spotkania
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-lock"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" name="meetingPassword" id="meetingPassword" placeholder="4509" aria-label="Miasto" aria-describedby="basic-addon1" required>
                    </div>
                    <label for="zoomSelect" class="username">
                        Wybierz typ zooma
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="fas fa-user-circle"></i>
                            </span>
                        </div>
                        <select name="type" id="zoomSelect" class="form-control" required>
                            <option>Główny</option>
                            <option>Zapasowy</option>
                           
                        </select>
                    </div>  
                    
                    <label for="description" class="username">
                        Wpisz opis zooma
                        
                    </label>
                    <textarea required name="description" placeholder="Opis zooma" id="description" class="form-control"></textarea>
                   <br>
                    
                    <input type="submit" value="Dodaj zooma" class="btn btn-primary button btn-golden">
                   
                </form>
               
            </div>
           
        </div>
        
    </div>
</div>

</body>
</html>